{
  "name": "quotipedia",
  "version": "1.0.0",
  "description": "Draw a random quote linked to its author wikipedia info",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm-run-all lint test clean",
    "build": "tsc",
    "postbuild": "npm run copy-assets",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "start": "tsc && node ./dist/index.js",
    "test": "jest",
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copy_assets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcouliba/quotipedia.git"
  },
  "keywords": [
    "quotable",
    "wikipedia"
  ],
  "author": "kevin coulibaly",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kcouliba/quotipedia/issues"
  },
  "homepage": "https://github.com/kcouliba/quotipedia#readme",
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.0",
    "@types/node": "13.5.1",
    "@types/shelljs": "0.8.6",
    "jest": "25.1.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.1",
    "shelljs": "0.8.5",
    "ts-node": "8.6.2",
    "ts-node-dev": "1.0.0-pre.44",
    "tslint": "6.0.0",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "@types/helmet": "0.0.45",
    "axios": "0.21.2",
    "ejs": "3.1.7",
    "express": "4.17.3",
    "helmet": "3.21.2",
    "make-promises-safe": "5.1.0"
  }
}
